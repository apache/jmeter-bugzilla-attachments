+    }
+
+    public String getJaasConf() {
+        return System.getProperty("java.security.auth.login.config");
+    }
+
+    public void setJaasConf(String jaasLocation) {
+        System.setProperty("java.security.auth.login.config", jaasLocation);
+    }
